<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="students" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">

    <DeleteKeys>
        <Column>id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id</Column>
    </UpdateKeys>
    <GeneratedKey>id</GeneratedKey>

    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="id" prefix="st"/>
                <AmbiguousColumn name="statusstudent" prefix="ss" databaseName="status"/>
            </AmbiguousColumns>

            <Sentence>
                <![CDATA[
                        SELECT
                        #COLUMNS#
                        FROM
                            ${mainschema}.students st
                            left join ${mainschema}.usr_user uu ON st.user_id = uu.usr_id
                            left join ${mainschema}.employment_status es on st.employment_status_id = es.id
                            left join ${mainschema}.student_status ss on st.student_status_id = ss.id
                            left join ${mainschema}.v_recent_employment_status vres on st.id = vres.student_id
                            #WHERE#
                    ]]>
            </Sentence>
        </Query>
    </Queries>

</JdbcEntitySetup>
